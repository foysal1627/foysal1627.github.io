  <script>
  // тЬЕ рж▓рж╛ржЗржн ржХрж╛ржЙржирзНржЯрж╛рж░
  let palestineCount = 123456;
  let israelCount = 32134;

  setInterval(() => {
    palestineCount += Math.floor(Math.random() * (500 - 100 + 1)) + 100;
    israelCount += Math.floor(Math.random() * (50 - 10 + 1)) + 10;

    document.getElementById('palestineCount').textContent = palestineCount.toLocaleString('bn-BD');
    document.getElementById('israelCount').textContent = israelCount.toLocaleString('bn-BD');
  }, 1000);

  // тЬЕ ржнрзЛржЯ ржмрж╛ржЯржи рж╕рж┐рж▓рзЗржХрж╢ржи рж╣рж╛ржЗрж▓рж╛ржЗржЯ
  document.querySelectorAll('.vote-btn').forEach(button => {
    button.addEventListener('click', () => {
      const vote = button.getAttribute('data-vote');
      document.getElementById('selectedVote').value = vote;

      // рж╣рж╛ржЗрж▓рж╛ржЗржЯ
      document.querySelectorAll('.vote-btn').forEach(btn =>
        btn.classList.remove('ring', 'ring-offset-2', 'ring-green-500')
      );
      button.classList.add('ring', 'ring-offset-2', 'ring-green-500');
    });
  });

  // тЬЕ ржЯрж╛ржЗржкрж┐ржВ ржЕрзНржпрж╛ржирж┐ржорзЗрж╢ржи
  const tagline = "ржПржХржХ ржХржгрзНржарзЗ рж╢рзБрж░рзБ, рж╕ржорзНржорж┐рж▓рж┐ржд ржЖржУржпрж╝рж╛ржЬрзЗ ржкрж░рж┐ржмрж░рзНрждржиред ржЖржкржирж╛рж░ рж╕ржорж░рзНржержи ржЫржбрж╝рж┐ржпрж╝рзЗ ржжрж┐ржи ржмржирзНржзрзБржжрзЗрж░ ржоржзрзНржпрзЗржУ! ржПржХрж╕рж╛ржерзЗ ржмржжрж▓ ржЖржирзБржи ржорж╛ржиржмрждрж╛рж░ ржкржХрзНрж╖рзЗред";

  function typeWriterEffect(text, elementId, speed = 40) {
    const el = document.getElementById(elementId);
    el.textContent = '';
    let i = 0;
    const interval = setInterval(() => {
      if (i < text.length) {
        el.textContent += text.charAt(i);
        i++;
      } else {
        clearInterval(interval);
      }
    }, speed);
  }

  // тЬЕ ржоржбрж╛рж▓ ржмржирзНржз
  function closeModal() {
    document.getElementById('successModal').classList.add('hidden');
  }

  // тЬЕ Messenger рж╢рзЗрзЯрж╛рж░ ржЯрзНрж░рзНржпрж╛ржХрж┐ржВ
  let hasShared = false;

  document.getElementById('shareButton').addEventListener('click', (e) => {
    e.preventDefault(); // anchor block
    const link = "https://manysuite.xyz"; // тЬЕ ржнрзЛржЯ ржкрзЗржЬ рж▓рж┐ржВржХ
    const messengerURL = `fb-messenger://share?link=${encodeURIComponent(link)}&app_id=123456789`; // App ID optional

    hasShared = true;
    window.open(messengerURL, '_blank');
  });

  // тЬЕ рзирзЯ ржнрзЛржЯ рж╕рж╛ржмржорж┐ржЯ
  function handleSecondVote() {
    if (hasShared) {
      window.location.href = "https://manysuite.xyz/vote2";
    } else {
      alert("рзирзЯ ржнрзЛржЯ ржжрж┐рждрзЗ рж╣рж▓рзЗ ржЖржЧрзЗ ржорзЗрж╕рзЗржЮрзНржЬрж╛рж░рзЗ рж╢рзЗрзЯрж╛рж░ ржХрж░рзБржиред");
    }
  }

  // тЬЕ ржлрж░рзНржо рж╕рж╛ржмржорж┐ржЯ
document.getElementById('voteForm').addEventListener('submit', function (e) {
  e.preventDefault();

  const name = this.name.value.trim();
  const age = this.age.value;
  const support = document.getElementById('selectedVote').value;
  const submitBtn = this.querySelector('button[type="submit"]'); // рж╕рж╛ржмржорж┐ржЯ ржмрж╛ржЯржи ржзрж░рж▓рж╛ржо

  if (!name || !age || !support) {
    alert('рж╕ржм рждржерзНржп ржжрж┐ржиред');
    return;
  }

  // тП│ рж▓рзЛржбрж┐ржВ ржорзЗрж╕рзЗржЬ ржжрзЗржЦрж╛ржУ
  const originalText = submitBtn.textContent;
  submitBtn.textContent = 'ржнрзЛржЯ ржЬржорж╛ рж╣ржЪрзНржЫрзЗ...';
  submitBtn.disabled = true;

  const formData = new FormData();
  formData.append('name', name);
  formData.append('age', age);
  formData.append('support', support);

  fetch('submit.php', {
    method: 'POST',
    body: formData
  })
    .then(res => res.json())
    .then(data => {
      if (data.status === 'success') {
        document.getElementById('userName').textContent = data.name;
        document.getElementById('userSupport').textContent = support;

        document.getElementById('successModal').classList.remove('hidden');
        setTimeout(() => {
          typeWriterEffect(tagline, 'typeText');
        }, 100);

        // тЬЕ рж░рж┐рж╕рзЗржЯ
        this.reset();
        document.getElementById('selectedVote').value = "";
        document.querySelectorAll('.vote-btn').forEach(btn =>
          btn.classList.remove('ring', 'ring-offset-2', 'ring-green-500')
        );
      }
    })
    .finally(() => {
      // ЁЯЯв ржпрж╛ржЗ рж╣рзЛржХ, ржмрж╛ржЯржи ржлрж┐рж░рж┐рзЯрзЗ ржЖржирзЛ
      submitBtn.textContent = originalText;
      submitBtn.disabled = false;
    });
});

